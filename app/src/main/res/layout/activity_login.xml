    <EditText
        android:id="@+id/signin_username"
        android:layout_width="333dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/edit_text"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="6dp"
        android:hint="username"
        android:maxLines="1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTextView" />

    <EditText
        android:id="@+id/signin_password"
        android:layout_width="333dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/edit_text"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="6dp"
        android:hint="password"
        android:maxLines="1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin_username" />

    <Button
        android:id="@+id/signIn"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_signin"
        android:drawablePadding="8dp"
        android:elevation="@dimen/cardview_default_radius"
        android:fontFamily="sans-serif-black"
        android:padding="10dp"
        android:text="Sign in"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTextView"
         />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:drawablePadding="8dp"
        android:elevation="@dimen/cardview_default_radius"
        android:fontFamily="@font/josefin_sans_semibold"
        android:padding="12dp"
        android:text="Have not an account yet ?"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guestLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signIn"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="@dimen/cardview_default_radius"
        android:fontFamily="sans-serif-black"
        android:text="Sign up"
        android:textColor="@color/blue"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/question"
        app:layout_constraintStart_toEndOf="@+id/question"
        app:layout_constraintTop_toTopOf="@+id/question"
        app:layout_constraintVertical_bias="0.578" />

    <TextView
        android:id="@+id/or"
        android:layout_width="80dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="@dimen/cardview_default_radius"
        android:fontFamily="@font/josefin_sans_semibold"
        android:text="Or"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/guestLogin"
        app:layout_constraintEnd_toStartOf="@+id/guestLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guestLogin"
        tools:ignore="TextSizeCheck" />


    <TextView
        android:id="@+id/guestLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_back"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:drawablePadding="8dp"
        android:elevation="@dimen/cardview_default_radius"
        android:fontFamily="@font/josefin_sans_semibold"
        android:gravity="center"
        android:padding="10dp"
        android:text="Continue as a guest"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:drawableEndCompat="@drawable/baseline_arrow_forward_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question"
        app:layout_constraintVertical_bias="0.5" />


