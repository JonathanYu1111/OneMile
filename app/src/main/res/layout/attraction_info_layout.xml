<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/tools">
    <!-- 主要布局 -->
    <ScrollView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <LinearLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/attr_info_vp"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/attr_info_freeOrNot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Not Free"
                android:fontFamily="@font/josefin_sans_semibold"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/attnInfo_show_openTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_keyboard_arrow_down_24"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/attr_info_closedOrNot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Time Slot"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/openTime_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mon.:10am - 5pm\nTues.:10am - 5pm \nWed:10am - 5pm\nThur.:10am - 5pm \nFri.:10am - 5pm\nSat.:10am - 5pm \nSun.:10am - 5pm"
            android:gravity="center"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/baseline_directions_walk_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="16 minutes walk (0.8 mile)"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/attr_info_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Attraction Name"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:textSize="30sp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/collectionButton"
                    android:contentDescription="collextion"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/favorites_normal"
                    android:onClick="pressCollectionButton"/>

            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/map_small"
                />

            <TextView
                android:id="@+id/attr_info_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="This is a descripition. Max Lines for 3.
                This is a descripition. Max Lines for 3.
                This is a descripition. Max Lines for 3.
                This is a descripition. Max Lines for 3.
                This is a descripition. Max Lines for 3." />

            <TextView
                android:id="@+id/tv_read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Read more"
                android:textColor="#0000FF" />
        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="official website"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Recommendation"
                android:textColor="@color/black"
                android:fontFamily="@font/aclonica"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="15dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="10dp"
                        android:scaleX="1.2"
                        android:scaleY="1.3"
                        android:scaleType="centerCrop"
                        android:src="@drawable/landscape_default_image" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:text="Attraction1"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="10dp"
                            android:scaleX="1.2"
                            android:scaleY="1.3"
                            android:scaleType="centerCrop"
                            android:src="@drawable/landscape_default_image" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:text="Attraction1"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="15dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="10dp"
                            android:scaleX="1.2"
                            android:scaleY="1.3"
                            android:scaleType="centerCrop"
                            android:src="@drawable/landscape_default_image" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:text="Attraction1"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reviews"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/attnInfo_show_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/attr_info_comment_rv"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp">

            <!-- 第一个LinearLayout，用于显示评分和星星 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <!-- 左边显示评分 -->
                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.7"
                    android:textSize="25sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginRight="10dp"/>

                <!-- 右边用自定义控件RatingBar显示星星 -->
                <RatingBar
                    android:isIndicator="true"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:layout_height="40dp"
                    android:layout_width="wrap_content"
                    android:numStars="5"
                    android:rating="4.7"
                    android:stepSize="0.1"
                    android:contentDescription="4.5 out of 5 stars" />




            </LinearLayout>

            <!-- 第二个LinearLayout，用于显示评分进度条 -->
            <LinearLayout
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <!-- 评分条目1 -->
                <LinearLayout
                    android:layout_marginVertical="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Excellent"/>

                    <ProgressBar
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/custom_progressbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="70" />



                </LinearLayout>
                <!-- 评分条目2 -->
                <LinearLayout
                    android:layout_marginVertical="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Very Good"/>

                    <ProgressBar
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/custom_progressbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0" />

                </LinearLayout>
                <!-- 评分条目3 -->
                <LinearLayout
                    android:layout_marginVertical="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Average"/>

                    <ProgressBar
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/custom_progressbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0" />

                </LinearLayout>
                <!-- 评分条目4 -->
                <LinearLayout
                    android:layout_marginVertical="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Poor"/>

                    <ProgressBar
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/custom_progressbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0" />

                </LinearLayout>
                <!-- 评分条目5 -->
                <LinearLayout
                    android:layout_marginVertical="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Very Awful"/>

                    <ProgressBar
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/custom_progressbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="30"/>

                </LinearLayout>

            </LinearLayout>

            <!-- 添加评论按钮 -->
            <Button
                android:id="@+id/attr_info_addComment_btn"
                android:layout_marginVertical="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="add comment"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accessibility Infomation"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accessibility InfomationAccessibility Infomation
                Accessibility Infomation
                Accessibility Infomation
Accessibility Infomation
Accessibility Infomation
Accessibility Infomation"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
